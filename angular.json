{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "right-angled-demo": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": ["src/assets", "src/favicon.ico"],
            "styles": [
              "node_modules/normalize.css/normalize.css",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/alertify/themes/alertify.core.css",
              "node_modules/alertify/themes/alertify.bootstrap.css",
              "node_modules/alertify/lib/alertify.min.js",
              "node_modules/prismjs/themes/prism.css",
              "src/styles.scss"
            ],
            "scripts": ["node_modules/alertify/lib/alertify.min.js"]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": false,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "right-angled-demo:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "right-angled-demo:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "right-angled-demo:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": ["node_modules/alertify/lib/alertify.min.js"],
            "styles": [
              "node_modules/normalize.css/normalize.css",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/alertify/themes/alertify.core.css",
              "node_modules/alertify/themes/alertify.bootstrap.css",
              "node_modules/alertify/lib/alertify.min.js",
              "node_modules/prismjs/themes/prism.css",
              "src/styles.scss"
            ],
            "assets": ["src/assets", "src/favicon.ico"]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["src/tsconfig.app.json", "src/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    },
    "right-angled-demo-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "right-angled-demo:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["e2e/tsconfig.e2e.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "right-angled-demo",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "rt-demo",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "rt-demo"
    }
  }
}
