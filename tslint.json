{
    "extends": "tslint:latest",
    "rulesDirectory": ["./node_modules/codelyzer"],
    "rules": {
        "only-arrow-functions": false,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "semicolon": [false],
        "interface-name": [true, "never-prefix"],
        "max-line-length": [true, 300],
        "member-access": [false],
        "member-ordering": [true, "static-before-instance", "variables-before-functions"],
        "no-default-export": true,
        "no-inferrable-types": false,
        "no-object-literal-type-assertion": false,
        "no-implicit-dependencies": [true, "dev"],
        "no-mergeable-namespace": true,
        "no-namespace": true,
        "no-null-keyword": false,
        "no-reference": true,
        "no-require-imports": true,
        "no-switch-case-fall-through": true,
        "no-submodule-imports": [true, "rxjs", "@angular", "angulartics2", "prismjs"],
        "no-use-before-declare": true,
        "one-variable-per-declaration": true,
        "quotemark": [true, "double", "avoid-escape"],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "typedef": [true, "call-signature", "parameter", "property-declaration", "member-variable-declaration"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],
        "no-angle-bracket-type-assertion": false,
        "directive-selector": [true, "attribute", "rtDemo", "camelCase"],
        "component-selector": [true, "element", "rt-demo", "kebab-case"],
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-attribute-parameter-decorator": true,
        "no-input-rename": false,
        "no-output-rename": false,
        "no-forward-ref": false,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "pipe-naming": [true, "camelCase", "rtDemo"],
        "component-class-suffix": true,
        "directive-class-suffix": true,
        "import-destructuring-spacing": true,
        "templates-use-public": false,
        "invoke-injectable": true,
        "no-access-missing-member": false,
        "no-unused-css": false
    }
}
