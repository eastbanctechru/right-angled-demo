{
    "files.exclude": {
        "**/compiled": true,
        "**/dll": true,
        "**/.awcache": true,
        "**/dist": true,
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.css": {
            "when": "$(basename).scss"
        }
    },
    "search.exclude": {
        "**/docs": true,
        "**/coverage": true
    },
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 120,
    "typescript.check.workspaceVersion": false
}
